<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="form-signin form">
            <h2 class="form-signin-heading">Please sign in</h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <!--<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>-->
            <%= f.email_field :email, placeholder: "Email address", autofocus: true, :id => "inputEmail", :class => 'form-control' %>
            <label for="inputPassword" class="sr-only">Password</label>
            <%= f.password_field :password, placeholder: "Password", autocomplete: "off", :id => "inputPassword", :class => 'form-control', :required => true %>
            <!--<input type="password" id="inputPassword" class="form-control" placeholder="Password" required>-->
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %><span>Remember me</span>
              </label>
              <a href="#" class="pull-right">Forgot Password</a>
            </div>
            <%= f.submit " Sign In ", :class => 'btn btn-lg btn-primary btn-block' %>
            <p class="text-center signup-link">Don't have an account yet?
              <%= link_to("Sign up", '/sign_up') %></li>
            </p>
          </div>
        </div>
      </div>
    </div>
<% end %>
