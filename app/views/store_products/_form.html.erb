      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    store_path(params[:store_id]), :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>