<%= form_for @store_product, :html => {:class => "form-horizontal store_product"} do |f| %>

    <% if @store_product.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@store_product.errors.count, "error") %> prohibited this store_product
              from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @store_product.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <%= image_tag @store_product.avatar.url, size: "200x200" %><br><br>
    <div class="form-group">
      <div class="col-lg-10">
        <%= f.file_field :avatar, :class => 'form-control' %>
      </div>
      <%= f.error_span(:avatar) %>
    </div>
    <div class="form-group">
      <%#= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%# @this_name =  @store_product.product ? @store_product.get_name : nil %>
        <%= f.text_field :name, placeholder: :name.capitalize, :class => 'form-control' %>
      </div>
      <%= f.error_span(:name) %>
    </div>
    <div class="form-group">
      <%#= f.label :product_type, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%# @this_type =  @store_product.product ? @store_product.get_type : nil %>
        <%= f.text_field :product_type, placeholder: 'Type', :class => 'form-control' %>
      </div>
      <%= f.error_span(:product_type) %>
    </div>
    <div class="form-group">
      <%#= f.label :brand, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%# @this_brand =  @store_product.product ? @store_product.get_brand : nil %>
        <%= f.text_field :brand, placeholder: :brand.capitalize, :class => 'form-control' %>
      </div>
      <%= f.error_span(:brand) %>
    </div>
    <div class="form-group">
      <%#= f.label :manufacturer, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%# @this_manuf =  @store_product.product ? @store_product.get_manufacturer : nil %>
        <%= f.text_field :manufacturer, placeholder: :manufacturer.capitalize, :class => 'form-control' %>
      </div>
      <%= f.error_span(:manufacturer) %>
    </div>
    <div class="form-group">
      <%#= f.label :price, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :price, placeholder: :price.capitalize, :class => 'form-control' %>
      </div>
      <%= f.error_span(:price) %>
    </div>
    <div class="form-group">
      <%#= f.label :stock, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :stock, placeholder: :stock.capitalize, :class => 'form-control' %>
      </div>
      <%= f.error_span(:stock) %>
    </div>
    <%= f.hidden_field :store_id, :value => params[:store_id] %>
    <div class="form-group">
      <div class="col-lg-10">
        <%= f.text_field :description, placeholder: :description, :class => 'form-control' %>
      </div>
      <%= f.error_span(:description) %>
    </div>

    <!--<div id="skillSet">-->
    <div id="addVariant">
      <%= render partial: 'variant_form' %>
    </div>
    <a href="javascript:;" id="addNewVariant" class="btn btn-default">Add New Variant</a>
    <!--<div class="actions">-->
      <!--<%#= f.submit %>-->
    <!--</div>-->
    <div class="hide" id="new_variant_form">
      <%= render partial: 'variant_form' %>
    </div>

    <script>
      $(document).ready(function() {
        $("#addNewVariant").click(function() {
          $("#addVariant").append($("#new_variant_form").html());
        });
      });
    </script>

    <br><br>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    :back, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>