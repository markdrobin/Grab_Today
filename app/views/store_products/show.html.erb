<%- model_class = StoreProduct -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<%= image_tag @store_product.get_avatar.url, size: "100x100" %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @store_product.get_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_type) %>:</strong></dt>
  <dd><%= @store_product.get_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brand) %>:</strong></dt>
  <dd><%= @store_product.get_brand %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong></dt>
  <dd><%= @store_product.get_manufacturer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @store_product.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stock) %>:</strong></dt>
  <dd><%= @store_product.stock %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %></strong></dt>
  <dd><%= @store_product.get_description %></dd>
</dl>
<div>
  <h3>Variants:</h3>
  <% if !@store_product.product_variants.empty? %>
      <%= print "WOWOWOWOWOW #{@store_product.product_variants[0].variant.name} :: #{@store_product.product_variants[0].variant.value}" %>
    <dl class="dl-horizontal">
      <% @store_product.product_variants.each do |variant| %>
          <dt><strong><%= model_class.human_attribute_name(variant.variant.name) %>:</strong></dt>
          <dd><%= variant.variant.value %></dd>
          <%= print "#{variant.variant.name}" %>
      <% end %>
    </dl>
  <% else %>
      <%= "None" %>
  <% end %>
</div>
</br>

<%= link_to t('.back', :default => t("helpers.links.back")),
              store_products_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_store_product_path(@store_product, :store_id => @store_product.store_id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              store_product_path(@store_product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
