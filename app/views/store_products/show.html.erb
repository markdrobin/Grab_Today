<%- model_class = StoreProduct -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<center><h2><%= @store_product.get_name %></h2></center>
<div class="row">
  <ul class="thumbnails files">
    <% unless @store_product.pictures.empty? %>
        <% @store_product.pictures.each do |pic| %>
            <li class="span3" id="picture_<%= pic.id %>">
              <div class="thumbnail">
                <%= image_tag pic.image.url, size: '200x200', :id => 'pix' %>
              </div>
        <% end %>
    <% end %>
  </ul>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @store_product.get_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_type) %>:</strong></dt>
  <dd><%= @store_product.get_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brand) %>:</strong></dt>
  <dd><%= @store_product.get_brand %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong></dt>
  <dd><%= @store_product.get_manufacturer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= "P#{@store_product.price}" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stock) %>:</strong></dt>
  <dd><%= @store_product.stock %></dd>
  <dd>
    <div class="activity">
      <%= render_activities @activities %>
    </div>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @store_product.description %></dd>
  <% if !@store_product.variants.empty? %>
      <dl class="dl-horizontal">
        <% @store_product.variants.each do |variant| %>
            <dt><strong><%= model_class.human_attribute_name(variant.name) %>:</strong></dt>
            <dd><%= variant.value %></dd>
        <% end %>
      </dl>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:qr_code) %>:</strong></dt>
  <dd>
    <div class="qr-view"><%= raw @qr.as_html %></div>
  </dd>
</dl>

<div>
  <a href="javascript:;" id="decodePix" class="btn btn-default">DECODE!</a>
  <a href="javascript:;" id="addToCart" class="btn btn-danger">Add To Cart</a>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
            store_path(@store_product.store_id), :class => 'btn btn-default' %>
<%= link_to t('.restock', :default => t("helpers.links.restock")),
            restock_store_product_path(@store_product, :store_id => @store_product.store_id), :class => 'btn btn-default' %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_store_product_path(@store_product, :store_id => @store_product.store_id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            store_product_path(@store_product),
            :method => 'delete',
            :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
            :class => 'btn btn-danger' %>
