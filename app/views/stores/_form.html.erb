<%= form_for @store, :html => {:class => "form-horizontal store"} do |f| %>

    <% if @store.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@store.errors.count, "error") %> prohibited this store from being
              saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @store.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <center><%= image_tag @store.avatar.url, size: "100x100" %></center><br>
    <div class="form-group">
      <%= f.label :avatar, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.file_field :avatar, :class => 'form-control' %>
      </div>
      <%= f.error_span(:avatar) %>
    </div>
    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= f.error_span(:name) %>
    </div>
    <div class="form-group">
      <%= f.label :contact, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :contact, :class => 'form-control' %>
      </div>
      <%= f.error_span(:contact) %>
    </div>
    <div class="form-group">
      <%= f.label :location, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :location, :class => 'form-control' %>
      </div>
      <%= f.error_span(:location) %>
    </div>
    <div class="form-group">
      <%= f.label :category, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.select :category, @store.store_types.values, {include_blank: 'select category'}, :class => 'form-control' %>
      </div>
      <%= f.error_span(:category) %>
    </div>
    <div class="form-group">
      <%= f.label :store_hours, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :store_hours, :class => 'form-control' %>
      </div>
      <%= f.error_span(:store_hours) %>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :description, :class => 'form-control' %>
      </div>
      <%= f.error_span(:description) %>
    </div>
    <div class="form-group">
      <%= f.label :website, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :website, :class => 'form-control' %>
      </div>
      <%= f.error_span(:website) %>
    </div>
    <div class="form-group">
      <%= f.label :facebook_page, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :facebook_page, :class => 'form-control' %>
      </div>
      <%= f.error_span(:facebook_page) %>
    </div>
    <div class="form-group">
      <%= f.label :twitter_page, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :twitter_page, :class => 'form-control' %>
      </div>
      <%= f.error_span(:twitter_page) %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    owned_stores_user_path(current_user), :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>
