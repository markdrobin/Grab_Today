<%- model_class = Store -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:avatar) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:contact) %></th>
    <th><%= model_class.human_attribute_name(:location) %></th>
    <th><%= model_class.human_attribute_name(:category) %></th>
    <th><%= model_class.human_attribute_name(:store_hours) %></th>
    <th><%= model_class.human_attribute_name(:average_sales) %></th>
    <th><%= model_class.human_attribute_name(:description) %></th>
    <th><%= model_class.human_attribute_name(:website) %></th>
    <th><%= model_class.human_attribute_name(:facebook_page) %></th>
    <th><%= model_class.human_attribute_name(:twitter_page) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @stores.each do |store| %>
      <tr>
        <td><%= image_tag store.avatar.url, size: "50x50" %></td>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.contact %></td>
        <td><%= store.location %></td>
        <td><%= store.category %></td>
        <td><%= store.store_hours %></td>
        <td><%= store.average_sales %></td>
        <td><%= store.description %></td>
        <td><%= store.website %></td>
        <td><%= store.facebook_page %></td>
        <td><%= store.twitter_page %></td>
        <td><%= store.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_store_path(store), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      store_path(store),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
            root_path, :class => 'btn btn-default'  %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_store_path,
            :class => 'btn btn-primary' %>
