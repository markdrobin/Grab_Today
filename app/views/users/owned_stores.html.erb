<!-- START THE FEATURETTES -->
<% @stores.each_with_index do |store, index| %>

    <% if (index % 2) != 0 %>
        <div class="row featurette">
          <div class="col-md-7">
            <h2 class="featurette-heading"><%= store.name %></h2>

            <p class="lead"><strong><%= model_class.human_attribute_name(:category) %>: </strong><%= store.category %>
            </p>

            <p class="lead"><strong><%= model_class.human_attribute_name(:location) %>: </strong><%= store.location %>
            </p>

            <p class="lead">
              <strong><%= model_class.human_attribute_name(:description) %>: </strong><%= store.description %></p>

            <p class="lead"><strong><%= model_class.human_attribute_name(:website) %>: </strong><%= store.website %></p>

            <p class="lead">
              <strong><%= model_class.human_attribute_name(:facebook_page) %>: </strong><%= store.facebook_page %></p>

            <p>Products: </p>
            <% if !store.get_products.empty?  %>
                <% store.get_products.each do |product| %>
                    <%= product.name %>
                <% end %>
            <% else %>
                <%= 'none' %>
            <% end  %>
            </br>

            <%= link_to 'Add Product',  new_store_product_path(:store_id => store.id), :class => 'btn btn-default btn-xs'%>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_store_path(store), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        store_path(store),
                        :method => :delete,
                        :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                        :class => 'btn btn-xs btn-danger' %>
          </div>
          <div class="col-md-5">
            <!-- <img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="Generic placeholder image"> -->
            <%= image_tag(store.avatar, class: "featurette-image img-responsive center-block") %>
          </div>
        </div>
    <% else %>
        <div class="row featurette">
          <div class="col-md-7 col-md-push-5">
            <h2 class="featurette-heading"><%= store.name %></h2>

            <p class="lead"><strong><%= model_class.human_attribute_name(:category) %>: </strong><%= store.category %>
            </p>

            <p class="lead"><strong><%= model_class.human_attribute_name(:location) %>: </strong><%= store.location %>
            </p>

            <p class="lead">
              <strong><%= model_class.human_attribute_name(:description) %>: </strong><%= store.description %></p>

            <p class="lead"><strong><%= model_class.human_attribute_name(:website) %>: </strong><%= store.website %></p>

            <p class="lead">
              <strong><%= model_class.human_attribute_name(:facebook_page) %>: </strong><%= store.facebook_page %></p>

            <p>Products: </p>
            <% if !store.get_products.empty?  %>
              <% store.get_products.each do |product| %>
                <%= product.name %>
              <% end %>
            <% else %>
              <%= 'none' %>
            <% end  %>
            </br>

            <%= link_to 'Add Product',  new_store_product_path(:store_id => store.id), :class => 'btn btn-default btn-xs'%>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_store_path(store), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        store_path(store),
                        :method => :delete,
                        :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                        :class => 'btn btn-xs btn-danger' %>
          </div>
          <div class="col-md-5 col-md-pull-7">
            <%= image_tag(store.avatar, class: "featurette-image img-responsive center-block") %>
          </div>
        </div>
    <% end %>
    <hr class="featurette-divider">
<% end %>
<!-- /END THE FEATURETTES -->

